<%- include('../components/header.ejs'); %>


<div class="container">
    <h1><%= title %></h1>

    <div class="row">
        
        <div class="col">

            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Amount</th>
                </tr>
                </thead>
                <tbody>
                <% var totamount = 0.0 %>
                <!-- Repeatable Row Template -->   

                <% for(let count = 0; count < addcustomer.length; count++) { %>
                
                    <tr>
                        <th scope="row"><%= count + 1 %></th>
                        <td><%= addcustomer[count].custname %></td>
                        <td><%= addcustomer[count].custemail %></td>
                        <td>$<%= addcustomer[count].custamount %></td>
                        <% totamount += parseInt(addcustomer[count].custamount) %>
                    </tr>

                <% } %>

                </tbody>
            </table>
            <h3 class="text-center">Total: $<%= totamount %></h3>
            <div class="d-flex justify-content-between">
                
                <a href="/owner/" class="btn btn-success mb-1 ">Dashboard</a>
            </div>
            
        </div>
    </div>
</div>


<%- include('../components/footer.ejs'); %>
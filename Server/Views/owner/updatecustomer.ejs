
  <%- include('../components/header.ejs'); %>

<div class="container mt-1 backColor">
<div class="row justify-content-lg-center g-3">
    <h1><%= title %> Contact Info</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10 backcolor">
        <div class="input-group mb-3">
            <span class="input-group-text " id="inputGroup-name">Name</span>
            <input type="text" class="form-control" placeholder="Enter Name" aria-label=" Name" aria-describedby="Clothing Name"
            name="custname" value="<%= addcustomer.custname %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Contact Number</span>
            <input type="tel" class="form-control" placeholder="Enter Number (ex:243-524-4253)" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
             aria-label="Enter Number" aria-describedby="number"
            name="custnumber" value="<%= addcustomer.custnumber %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Email Address</span>
            <input type="email" class="form-control" placeholder="Enter emailAddress" aria-label="custemail" aria-describedby="custemail"
            name="custemail" value="<%= addcustomer.custemail %>" required>
        </div>

         <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Amount</span>
            <input type="number" class="form-control" placeholder="Amount" aria-label="custamount" aria-describedby="custamount"
            name="custamount" value="<%= addcustomer.custamount %>" required>
        </div>
       
          <div class="input-group mb-3">
            <select name="businessname" class="form-control" required>
               <% addbusiness.forEach(b => { %>
                    <% if(b.id == addcustomer.businessname){ %>
                        <option selected label="<%= b.bname  %>" name="<%= b.bname  %>"  value="<%= b.id  %>"></option>
                        <% } else { %>
                            <option label="<%= b.bname  %>" name="<%= b.bname  %>"  value="<%= b.id  %>"></option>
                     <%  } %>
                    <% }) %>
            </select>
        </div>



        <div class="mb-3">

         <% if(title == "Edit") { %>
                <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
            <% } else { %>
                <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
            <% } %>  


             <button type="button" class="btn btn-outline-warning"><a href="/owner/customers-list" id="cancelButton" class="update-button"><i class="fas fa-undo"></i> Cancel</a></button>
        </div>
        
        </div>
    </form>
</div>
</div>

<%- include('../components/footer.ejs'); %>
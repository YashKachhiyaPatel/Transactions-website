

  <%- include('../components/header.ejs'); %>
<div class="container mt-5">
<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
          <div class="login" id="contentArea">
              <h1 class="display-3 text-center" style="color:#121011">Transaction</h1>

             

              <form id="loginForm" novalidate method="POST">
                <div class="input-group mb-3">
                    <select name="customerid" class="form-control" required>   
                        <option>Select Customer Name</option>              
                        <% addcustomer.forEach(c => { %>
                                <option label="<%= c.custname  %>" name="<%= c.custname  %>"  value="<%= c.id  %>"></option>
                            <% }) %>                      
                    </select>
                </div>
                
                <div class="input-group mb-3">
                    <select name="type" class="form-control" required>    
                                  <option>Choose Type</option>             
                                    <option value="debit" name="debit">Debit</option>  
                                    <option value="credit" name="credit">Credit</option>                             
                    </select>
                </div>

                <div class="form-group mb-3">
                  <div class="input-group">
                    
                    <input type="number" class="form-control" id="amount" name="amount"  required
                    value="" placeholder="Enter amount">
                  </div>
                 
                </div>   

                 <div class="mb-3">

                        <% if(title == "Edit") { %>
                                <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
                            <% } else { %>
                                <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
                            <% } %>  


                    <button type="button" class="btn btn-outline-warning"><a href="/owner/addcustomer" id="cancelButton" class="update-button"><i class="fas fa-undo"></i> Cancel</a></button>
                </div>
              </form>
             
          </div>
         
    </div>

     
</div>
</div>


<%- include('../components/footer.ejs'); %>
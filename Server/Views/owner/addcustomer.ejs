<%- include('../components/header.ejs'); %>
<div class="container">


<h1><%= title %></h1>

<div class="row">
   
    <div class="col">

      <div class="d-flex justify-content-between">
        <% if(displayName) { %>
        
        <a href="/owner/addcustomer/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Customer</a>
        <% } %>
        <a href="/owner/" class="btn btn-success mb-1 ">Dashboard</a>
        </div>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Number</th>
                <th scope="col">Email</th>
                <th scope="col">Business</th>
                <th scope="col">Amount</th>
                 <% if(displayName) { %>
                  <th></th>
                  <th></th>
                <% } %>
              </tr>
            </thead>
            <tbody>

             <!-- Repeatable Row Template -->   

             <% for(let count = 0; count < addcustomer.length; count++) { %>
              
                <tr>
                    <th scope="row"><%= count + 1 %></th>
                    <td><%= addcustomer[count].custname %></td>
                    <td><%= addcustomer[count].custnumber %></td>
                    <td><%= addcustomer[count].custemail %></td>
                    <td><%= addcustomer[count].busiessname %></td>
                    <td>$<%= addcustomer[count].custamount %></td>
                     <% if(displayName) { %>
                      <td class="text-center"><a href="/owner/addcustomer/edit/<%= addcustomer[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Edit</a></td>
                      <td class="text-center"><a href="/owner/addcustomer/delete/<%= addcustomer[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                    <% } %>
                </tr>

              <% } %>

            </tbody>
          </table>
    </div>
</div>

</div>

<%- include('../components/footer.ejs'); %>

  
<div class="container mt-1 backColor">
<div class="row justify-content-lg-center g-3">
    <h1><%= title %> Contact Info</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10 backcolor">
        <div class="input-group mb-3">
            <span class="input-group-text " id="inputGroup-name">Name</span>
            <input type="text" class="form-control" placeholder="Enter Name" aria-label=" Name" aria-describedby="Clothing Name"
            name="name" value="<%= contacting.name %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Contact Number</span>
            <input type="number" class="form-control" placeholder="Enter Number" aria-label="Enter Number" aria-describedby="number"
            name="number" value="<%= contacting.number %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Email Address</span>
            <input type="email" class="form-control" placeholder="Enter emailAddress" aria-label="emailAddress" aria-describedby="emailAddress"
            name="emailAddress" value="<%= contacting.emailAddress %>" required>
        </div>
         
        <div class="mb-3">
                <button type="submit" id="editButton" class="btn btn-outline-primary update-button"><i class="fas fa-edit fa-lg"></i> Update</button>
                <button class="btn btn-outline-danger" id="deleteButton" ><a href="/contacting-list/delete/<%= contacting._id %>" class="update-button delete"><i class="fas fa-trash-alt fa-lg"></i> Delete</a></button>   
             <button type="button" class="btn btn-outline-warning"><a href="/contacting-list" id="cancelButton" class="update-button"><i class="fas fa-undo"></i> Cancel</a></button>
        </div>
        
        </div>
    </form>
</div>
</div>

